<Window x:Class="FarmView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FarmView"
        xmlns:localAnimal="clr-namespace:FarmModel;assembly=FarmModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView x:Name="AnimalListView" HorizontalAlignment="Left" Height="313" Margin="10,33,0,0" VerticalAlignment="Top" Width="424">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <ComboBox HorizontalAlignment="Left" Margin="454,84,0,0" VerticalAlignment="Top" Width="59"
                  ItemsSource="{Binding Source={local:EnumBinding {x:Type localAnimal:AnimalSex}}}"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="518,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="643,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="ChooseSexLabel" Content="Sex" HorizontalAlignment="Left" Margin="454,58,0,0" VerticalAlignment="Top" Width="59"/>
        <Label x:Name="ChooseWeightLabel" Content="Weight" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="643,58,0,0" Width="120"/>
        <Label x:Name="ChooseAgeLabel" Content="Age" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="518,58,0,0" Width="120"/>
        <Label x:Name="AddNewAnimalHeaderLabel" Content="Animal Constructor" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="454,35,0,0"/>
        <Button x:Name="AddCustomAnimalButton" Content="Add new animal to the list" HorizontalAlignment="Left" Margin="518,112,0,0" VerticalAlignment="Top" Width="184"/>
        <ToolBar HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="900">
            <Button x:Name="OpenFileButton" Content="File"></Button>
            <Button x:Name="SaveFileButton" Content="Save"></Button>
            <Button x:Name="NewFileButton" Content="New"></Button>
        </ToolBar>
        <Label x:Name="ChooseAnimalLabel" Content="Choose animals:" HorizontalAlignment="Center"  VerticalAlignment="Center" Height="25" Width="auto"
                   Grid.Column="0" Grid.Row="0" Margin="10,351,686,43"/>
        <ComboBox x:Name="ChooseAnimaInListComboBox"  Width="103" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="auto"
                  ItemsSource="{Binding Source={local:EnumBinding {x:Type localAnimal:Animals}}}" 
                  Grid.Column="0" Margin="10,381,679,16"/>
        <ComboBox x:Name="ChooseActionComboBox" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                      Width="109" Height="auto"
                      ItemsSource="{Binding Source={local:EnumBinding {x:Type localAnimal:Action}}}" Margin="0,381,358,16"/>
        <Label x:Name="ChooseActionLabel" Content="Choose action:" HorizontalAlignment="Center"  VerticalAlignment="Center"
                   Height="24" Width="auto" Margin="346,352,358,43"/>
        <Button x:Name="FeedAllButton" Content="Feed All" HorizontalAlignment="Left" Margin="143,381,0,0" VerticalAlignment="Top" Width="132"/>

    </Grid>
</Window>
